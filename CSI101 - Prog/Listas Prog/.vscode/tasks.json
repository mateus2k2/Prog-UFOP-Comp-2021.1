{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "/usr/bin/g++",
      "args": ["-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}.exe"],
      "options": {
        "cwd": "/usr/bin"
      },
      
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute",
    },

    "group": {
        "kind": "build",
        "isDefault": true
    },
    }
  ]
}